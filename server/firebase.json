{
    "functions": [
        {
            "source": ".",
            "codebase": "default",
            "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"],
            "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
            "runtime": "nodejs18",
            "locationId": "europe-central2"
        }
    ],
    "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [{ "source": "**", "function": "app" }],
        "locationId": "europe-central2"
    }
}
